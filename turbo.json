{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**/*"]
        },
        "build:watch": {
            "dependsOn": ["^build:watch"],
            "outputs": ["dist/**/*"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "ui": "tui"
}

{
    "name": "my-monitor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint",
        "lint:staged": "lint-staged",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps|demos)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "commit": "git-cz",
        "prepare": "husky",
        "clean": "run-s clean:build clean:caches",
        "clean:build": "pnpm --filter @my-monitor/* clean",
        "clean:caches": " rimraf .turbo/cache **/*/.turbo",
        "clean:deps": "rimraf node_modules **/*/node_modules",
        "clean:all": "run-s clean:build clean:caches clean:deps",
        "build": "turbo build",
        "build:watch": "turbo build:watch",
        "dev": "turbo dev",
        "dev:server:dsn": "pnpm --filter @my-monitor/dsn start:dev",
        "dev:server:monitor": "pnpm --filter @my-monitor/server start:dev",
        "docker:start": "docker compose -p my-moitor -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -p my-moitor -f .devcontainer/docker-compose.yml down",
        "docker:deploy": "docker compose -p my-moitor -f .devcontainer/docker-compose.deploy.yml up -d",
        "docker:deploy:stop": "docker compose -p my-moitor -f .devcontainer/docker-compose.deploy.yml down"
    },
    "config": {
        "commitizen": {
            "path": "cz-git"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,md}": [
            "prettier --write"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.13.1",
    "devDependencies": {
        "@commitlint/cli": "20.2.0",
        "@commitlint/config-conventional": "20.2.0",
        "@eslint/js": "9.39.1",
        "@types/node": "22.5.5",
        "commitizen": "4.3.1",
        "cspell": "9.4.0",
        "cz-git": "1.12.0",
        "eslint": "9.18.0",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "0.4.24",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "fast-glob": "3.3.3",
        "globals": "16.5.0",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "npm-run-all2": "^8.0.4",
        "rimraf": "^6.1.2",
        "turbo": "^2.6.3",
        "typescript": "5.9.3",
        "typescript-eslint": "8.48.1"
    }
}
